<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F8"
    android:orientation="vertical"
    tools:context=".MainActivity2_2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="350dp"
        android:layout_height="330dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke"
        app:cardBackgroundColor="#030F19"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/img"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="561dp"
                android:background="#061623"
                app:srcCompat="@drawable/dsc" />

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Meeting Link: meet.google.com/yeb-odga-wkr"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E"
                android:textColorHighlight="#114A77" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Time: 5:30 - 6:00 PM"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E" />

            <TextView
                android:id="@+id/speaker"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="190dp"
                android:layout_marginBottom="110dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Speaker: Siddhant Singh"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="240dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Location: Google Meet"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="350dp"
        android:layout_height="330dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#030F19"
        android:background="@drawable/stroke"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="561dp"
                android:background="#19486E"
                app:srcCompat="@drawable/dsc" />

            <TextView
                android:id="@+id/link1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Meeting Link: meet.google.com/yeb-odga-wkr"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Time: 10:30 - 11:30 AM"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E" />

            <TextView
                android:id="@+id/speaker1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="190dp"
                android:layout_marginBottom="110dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Speaker: Abhishek Srivastava"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E" />

            <TextView
                android:id="@+id/location1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="240dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:paddingLeft="7dp"
                android:text="Location: Google Meet"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#19486E" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    >

</LinearLayout>